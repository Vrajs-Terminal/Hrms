generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  role          String   @default("Admin")
  branch_id     Int?
  department_id Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  branch        Branch?     @relation(fields: [branch_id], references: [id])
  department    Department? @relation(fields: [department_id], references: [id])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  website   String?
  logo_url  String?
  tax_info  String?
}

model Zone {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  order_index Int      @default(0)
  branches    Branch[]
}

model Branch {
  id          Int          @id @default(autoincrement())
  name        String
  code        String       @unique
  type        String       @default("Metro")
  order_index Int          @default(0)
  zone_id     Int?
  zone        Zone?        @relation(fields: [zone_id], references: [id], onDelete: SetNull)
  departments Department[]
  users       User[]
}

model Department {
  id          Int      @id @default(autoincrement())
  name        String
  branch_id   Int
  order_index    Int             @default(0)
  branch         Branch          @relation(fields: [branch_id], references: [id], onDelete: Cascade)
  users          User[]
  subDepartments SubDepartment[]
}

model SubDepartment {
  id            Int           @id @default(autoincrement())
  name          String
  department_id Int
  order_index   Int           @default(0)
  department    Department    @relation(fields: [department_id], references: [id], onDelete: Cascade)
  designations  Designation[]

  @@unique([name, department_id]) // Prevent duplicate sub-departments within the same department
}

model Designation {
  id                Int           @id @default(autoincrement())
  name              String
  sub_department_id Int
  order_index       Int           @default(0)
  subDepartment     SubDepartment @relation(fields: [sub_department_id], references: [id], onDelete: Cascade)

  @@unique([name, sub_department_id]) // Prevent duplicate designations within the same sub-department
}
